		<td><?php echo $message->getUserTo()->getPseudo();?>
	<?php else :?>
		<td><a href='<?php echo $this->basePath().'/message/view/'.$message->getId(); ?>'><?php echo $message->getUserFrom()->getPseudo();?></a></td>
		<td><?php echo $this->translate('messageList_Me','message'); ?></td>
	<?php endif;?>
    <td><?php echo $message->getCreateDate()->format('d/m/Y'); ?></td>
	<td><?php
	$msg=$this->translate('messageList_Piece','message');
	$msg.=" marque ".$message->getPiece()->getBrand()->Description;
