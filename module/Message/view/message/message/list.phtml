<table>
<tr><th><?php echo $this->translate('messageList_From','message'); ?></th><th><?php echo $this->translate('messageList_To','message'); ?></th><th><?php echo $this->translate('messageList_Date','message'); ?></th><th><?php echo $this->translate('messageList_Piece','message'); ?></th></tr>
